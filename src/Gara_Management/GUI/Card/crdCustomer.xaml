<Window x:Class="Gara_Management.GUI.Card.crdCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gara_Management.GUI.Card"
                mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        WindowStyle="None" Background="Transparent" AllowsTransparency="True"
        Foreground="{StaticResource sColor1}" FontSize="22" 
        Height="540" Width="675">

    <Border Background="{StaticResource sColor4}" CornerRadius="10" MouseDown="Border_MouseDown" Margin="0,0,0,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="110"/>
                <RowDefinition/>
                <RowDefinition Height="85"/>
            </Grid.RowDefinitions>
            <!-- exit -->
            <Border x:Name="bd_exit" Cursor="Hand" 
                    MouseDown="bd_exit_MouseDown" Margin="615,0,0,65" CornerRadius="5">
                <Label x:Name="lb_exit" Content="X" Foreground="{StaticResource sColor1}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="30" Margin="0,-3,0,3"  />
            </Border>
            <!-- Title -->
            <TextBlock Text="Thông tin khách hàng" TextWrapping="Wrap" FontSize="30"
                       HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"
                       FontWeight="Bold" Width="340" Height="40"/>
            <!--thông tin -->
            <Grid Grid.Row="1" HorizontalAlignment="Center" Width="535">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <!-- MÃ Khách hàng-->
                <Border Grid.Row="0"  CornerRadius="10" BorderThickness="2"  Margin="0,5,380,5" >
                    <Grid Margin="0,0,-102,0">
                        <TextBlock Text="Mã khách hàng: " VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock Text="RPC002" VerticalAlignment="Center" Margin="168,0,0,0"/>
                        <Rectangle Height="2" VerticalAlignment="Top" Fill="{StaticResource sColor1}" Margin="0,40,0,0"/>
                    </Grid>
                </Border>
                <!-- Sđt -->
                <Border Grid.Row="0"  CornerRadius="10" BorderThickness="2"  Margin="268,5,0,5" >
                    <Grid>
                        <TextBlock Text="SĐT: " VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBox TextChanged="TextBox_TextChanged" VerticalContentAlignment="Center"  Background="Transparent" BorderThickness="0" Margin="54,0,0,0" Foreground="{StaticResource sColor1}"/>
                        <Rectangle Height="2" VerticalAlignment="Top" Fill="{StaticResource sColor1}" Margin="0,40,0,0"/>

                    </Grid>
                </Border>
                <!-- Họ tên  -->
                <Border Grid.Row="1"  CornerRadius="10" BorderThickness="2"  Margin="0,5,0,5" >
                    <Grid>
                        <TextBlock Text="Họ tên: " VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBox TextChanged="TextBox_TextChanged" VerticalContentAlignment="Center"  Background="Transparent" BorderThickness="0" Margin="82,0,0,0" Foreground="{StaticResource sColor1}"/>
                        <Rectangle Height="2" VerticalAlignment="Top" Fill="{StaticResource sColor1}" Margin="0,40,0,0"/>
                    </Grid>
                </Border>
               
                <!-- Địa chỉ -->

                <Border Grid.Row="2"  CornerRadius="10" BorderThickness="2"  Margin="0,5,0,5" >
                    <Grid Height="auto">

                        <TextBlock Text="Địa chỉ: " VerticalAlignment="Top" HorizontalAlignment="Left" />
                        <TextBox Text="hoo" TextChanged="TextBox_TextChanged" VerticalContentAlignment="Center"  Background="Transparent" BorderThickness="0" Foreground="{StaticResource sColor1}"  Margin="77,0,0,136"/>
                        <Rectangle Height="2" VerticalAlignment="Top" Fill="{StaticResource sColor1}" Margin="0,31,0,0"/>

                        <TextBlock Text="phường/xã: " VerticalAlignment="Top" HorizontalAlignment="Left" Margin="77,41,0,0" />
                        <TextBox TextChanged="TextBox_TextChanged" VerticalContentAlignment="Center"  Background="Transparent" BorderThickness="0" Foreground="{StaticResource sColor1}"  Margin="195,41,0,96"/>
                        <Rectangle Height="2" VerticalAlignment="Top" Fill="{StaticResource sColor1}" Margin="0,74,0,0"/>

                        <TextBlock Text="quận/huyện: " VerticalAlignment="Top" HorizontalAlignment="Left" Margin="77,83,0,0" />
                        <TextBox TextChanged="TextBox_TextChanged" VerticalContentAlignment="Center"  Background="Transparent" BorderThickness="0" Foreground="{StaticResource sColor1}"  Margin="205,83,0,54"/>
                        <Rectangle Height="2" VerticalAlignment="Top" Fill="{StaticResource sColor1}" Margin="0,117,0,0"/>

                        <TextBlock Text="tỉnh/thành phố: " VerticalAlignment="Top" HorizontalAlignment="Left" Margin="77,126,0,0" />
                        <TextBox TextChanged="TextBox_TextChanged" VerticalContentAlignment="Center"  Background="Transparent" BorderThickness="0" Foreground="{StaticResource sColor1}" Margin="234,126,0,11"/>
                        <Rectangle Height="2" VerticalAlignment="Top" Fill="{StaticResource sColor1}" Margin="0,160,0,0"/>


                    </Grid>
                </Border>

                <!-- nTiền nợ -->
                <Border Grid.Row="4"  CornerRadius="10" BorderThickness="2"  Margin="0,5,0,5" >
                    <Grid>
                        <TextBlock Text="Tiền nợ: " VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBox TextChanged="TextBox_TextChanged" VerticalContentAlignment="Center"  Background="Transparent" BorderThickness="0" Margin="88,0,-4,0" Foreground="{StaticResource sColor1}"/>
                        <Rectangle Height="2" VerticalAlignment="Top" Fill="{StaticResource sColor1}" Margin="0,40,0,0"/>
                    </Grid>
                </Border>
            </Grid>


            <Border x:Name="bd_save" MouseDown="bd_save_MouseDown" Grid.Row="2" Cursor="Hand" CornerRadius="10" BorderThickness="2" BorderBrush="{StaticResource sColor1}" Margin="296,25,297,24">

                <TextBlock x:Name="tbx_save" Text="Lưu" TextAlignment="Center"/>
            </Border>

        </Grid>
    </Border>
</Window>
