<Window x:Class="Gara_Management.GUI.Card.crdComponent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gara_Management.GUI.Card"
                mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" Background="Transparent" AllowsTransparency="True"
        Foreground="{StaticResource sColor1}" FontSize="22" 
        Height="500" Width="595"
        x:Name="Receipt">
    <Window.Resources>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetName="Receipt"
                             Storyboard.TargetProperty="Opacity"
                             From="0.0" To="1.0" Duration="0:0:0.5"/>
        </Storyboard>
        <!-- Custom Style for ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                       Content="{TemplateBinding SelectionBoxItem}"
                       Background="{TemplateBinding Background}"
                       BorderThickness="0"
                       IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                       ClickMode="Press"
                       Padding="5"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       >
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="Border"
                             Background="{TemplateBinding Background}"
                             BorderBrush="{TemplateBinding BorderBrush}"
                             BorderThickness="{TemplateBinding BorderThickness}"
                             CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <Popup x:Name="Popup"
                Placement="Bottom"
                IsOpen="{TemplateBinding IsDropDownOpen}"
                AllowsTransparency="True"
                Focusable="False"
                PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                   SnapsToDevicePixels="True"
                   MinWidth="{TemplateBinding ActualWidth}"
                   MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                         Background="White"
                         BorderBrush="Transparent"
                         BorderThickness="0"
                         CornerRadius="10">
                                        <ScrollViewer Margin="4">
                                            <StackPanel IsItemsHost="True"
                                     KeyboardNavigation.DirectionalNavigation="Contained" />
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Item Template for ComboBox Items -->
        <DataTemplate x:Key="ComboBoxItemTemplate">
            <TextBlock Text="{Binding}" Padding="5"/>
        </DataTemplate>
    </Window.Resources>

    <Border Background="{StaticResource sColor4}" CornerRadius="10" MouseDown="Border_MouseDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="82"/>
                <RowDefinition/>
                <RowDefinition Height="85"/>
            </Grid.RowDefinitions>
            <!-- exit -->
            <Border x:Name="bd_exit" Cursor="Hand" 
                    MouseDown="bd_exit_MouseDown" Margin="545,0,0,32" CornerRadius="5" Width="50" Height="50">
                <Label x:Name="lb_exit" Content="X" Foreground="{StaticResource sColor1}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="30" Margin="0,-3,0,3"  />
            </Border>
            <!-- Title -->
            <TextBlock Text="Phụ tùng" TextWrapping="Wrap" FontSize="30"
                       HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"
                       FontWeight="Bold" Width="230"/>
            <!--thông tin -->
            <Grid Grid.Row="1" HorizontalAlignment="Center" Width="484">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <!-- MÃ pt-->
                <Border Grid.Row="0"  CornerRadius="10" BorderThickness="2"  Margin="0,5,0,5" >
                    <Grid>
                        <TextBlock Text="Mã phụ tùng: " VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="txtb_id"  Text="COMP111" VerticalAlignment="Center" Margin="137,0,0,0"/>
                        <Rectangle Height="2" VerticalAlignment="Top" Fill="{StaticResource sColor1}" Margin="0,40,0,0"/>
                    </Grid>
                </Border>
                <!--  tên  -->
                <Border Grid.Row="1"  CornerRadius="10" BorderThickness="2"  Margin="0,5,0,5" >
                    <Grid>
                        <TextBlock Text="Tên phụ tùng: " VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <ComboBox x:Name="cbx_component"  ItemTemplate="{StaticResource ComboBoxItemTemplate}"
 HorizontalAlignment="Left" VerticalAlignment="Center"
ItemsSource="{Binding Items}"  Background="{StaticResource sColor3}" Width="336" Height="29" Margin="144,0,0,0">

                        </ComboBox>
                        <Rectangle Height="2" VerticalAlignment="Top" Fill="{StaticResource sColor1}" Margin="0,40,0,0"/>
                    </Grid>
                </Border>
                <!-- giá -->
                <Border Grid.Row="2"  CornerRadius="10" BorderThickness="2"  Margin="0,5,0,5" >
                    <Grid>
                        <TextBlock Text="Đơn giá: " VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBox x:Name="txtb_price" IsReadOnly="True" VerticalContentAlignment="Center"  Background="Transparent" BorderThickness="0" Margin="87,0,0,0" Foreground="{StaticResource sColor1}" />
                        <Rectangle Height="2" VerticalAlignment="Top" Fill="{StaticResource sColor1}" Margin="0,40,0,0"/>
                    </Grid>
                </Border>
                <!-- số lượng-->
                <Border Grid.Row="3"  CornerRadius="10" BorderThickness="2"  Margin="0,5,0,5" >
                    <Grid>
                        <TextBlock Text="Số lượng: " VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBox x:Name="txtb_amount"  VerticalContentAlignment="Center"  Background="Transparent" BorderThickness="0" Margin="98,0,0,0" Foreground="{StaticResource sColor1}"/>
                        <Rectangle Height="2" VerticalAlignment="Top" Fill="{StaticResource sColor1}" Margin="0,40,0,0"/>
                    </Grid>
                </Border>
                <!-- thành tiền -->
                <Border Grid.Row="4"  CornerRadius="10" BorderThickness="2"  Margin="0,5,0,5" >
                    <Grid>
                        <TextBlock Text="Thành tiền: " VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBox x:Name="txtb_bill" IsReadOnly="True" VerticalContentAlignment="Center"  Background="Transparent" BorderThickness="0" Margin="114,0,0,0" Foreground="{StaticResource sColor1}"/>
                        <Rectangle Height="2" VerticalAlignment="Top" Fill="{StaticResource sColor1}" Margin="0,40,0,0"/>
                    </Grid>
                </Border>

            </Grid>


            <Border x:Name="bd_save" MouseDown="bd_save_MouseDown" Grid.Row="2" Cursor="Hand" CornerRadius="10" BorderThickness="2" BorderBrush="{StaticResource sColor1}" Margin="242,25,243,24">

                <TextBlock x:Name="tbx_save" Text="OK" TextAlignment="Center"/>
            </Border>
           
        </Grid>
    </Border>

</Window>
