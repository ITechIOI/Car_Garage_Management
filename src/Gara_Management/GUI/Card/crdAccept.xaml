<Window x:Class="Gara_Management.GUI.Card.crdAccept"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gara_Management.GUI.Card"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        WindowStyle="None" Background="Transparent" AllowsTransparency="True"
        Foreground="{StaticResource sColor1}" FontSize="22" 
        Height="570" Width="450">
    <Border Background="{StaticResource sColor4}" CornerRadius="10" MouseDown="Border_MouseDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="127"/>
                <RowDefinition/>
                <RowDefinition Height="85"/>
            </Grid.RowDefinitions>
            <!-- exit -->
            <Border x:Name="bd_exit" Cursor="Hand" 
                    MouseDown="bd_exit_MouseDown" Margin="400,0,0,77" CornerRadius="5" Width="50">
                <Label x:Name="lb_exit" Content="X" Foreground="{StaticResource sColor1}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="30" Margin="0,-3,0,3"  />
            </Border>
            <!-- Title -->
            <TextBlock Text="Phiếu tiếp nhận sửa chữa" TextWrapping="Wrap" FontSize="30"
                       HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"
                       FontWeight="Bold" Width="230"/>
            <!--thông tin -->
            <Grid Grid.Row="1" HorizontalAlignment="Center" Width="340">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <!-- MÃ Phiếu-->
                <Border Grid.Row="0"  CornerRadius="10" BorderThickness="2"  Margin="0,5,0,5" >
                    <Grid>
                        <TextBlock Text="Mã phiếu:" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock Text="RPC002" VerticalAlignment="Center" Margin="106,0,0,0"/>
                        <Rectangle Height="2" VerticalAlignment="Top" Fill="{StaticResource sColor1}" Margin="0,40,0,0"/>
                    </Grid>
                </Border>
                <!-- Họ tên  -->
                <Border Grid.Row="1"  CornerRadius="10" BorderThickness="2"  Margin="0,5,0,5" >
                    <Grid>
                        <TextBlock Text="Họ tên: " VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBox TextChanged="TextBox_TextChanged" VerticalContentAlignment="Center"  Background="Transparent" BorderThickness="0" Margin="82,0,0,0" Foreground="{StaticResource sColor1}"/>
                        <Rectangle Height="2" VerticalAlignment="Top" Fill="{StaticResource sColor1}" Margin="0,40,0,0"/>
                    </Grid>
                </Border>
                <!-- Sđt -->
                <Border Grid.Row="2"  CornerRadius="10" BorderThickness="2"  Margin="0,5,0,5" >
                    <Grid>
                        <TextBlock Text="SĐT: " VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBox TextChanged="TextBox_TextChanged" VerticalContentAlignment="Center"  Background="Transparent" BorderThickness="0" Margin="54,0,0,0" Foreground="{StaticResource sColor1}"/>
                        <Rectangle Height="2" VerticalAlignment="Top" Fill="{StaticResource sColor1}" Margin="0,40,0,0"/>
                    </Grid>
                </Border>
                <!-- Bienr số -->
                <Border Grid.Row="3"  CornerRadius="10" BorderThickness="2"  Margin="0,5,0,5" >
                    <Grid>
                        <TextBlock Text="Biển số: " VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBox TextChanged="TextBox_TextChanged" VerticalContentAlignment="Center"  Background="Transparent" BorderThickness="0" Margin="86,0,0,0" Foreground="{StaticResource sColor1}"/>
                        <Rectangle Height="2" VerticalAlignment="Top" Fill="{StaticResource sColor1}" Margin="0,40,0,0"/>
                    </Grid>
                </Border>
                <!-- hiệu xe -->
                <Border Grid.Row="4"  CornerRadius="10" BorderThickness="2"  Margin="0,5,0,5" >
                    <Grid>
                        <TextBlock Text="Hiệu xe: " VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBox TextChanged="TextBox_TextChanged" VerticalContentAlignment="Center"  Background="Transparent" BorderThickness="0" Margin="88,0,0,0" Foreground="{StaticResource sColor1}"/>
                        <Rectangle Height="2" VerticalAlignment="Top" Fill="{StaticResource sColor1}" Margin="0,40,0,0"/>
                    </Grid>
                </Border>
                <!-- ngày tiếp nhận -->
                <Border Grid.Row="5"  CornerRadius="10" BorderThickness="2"  Margin="0,5,0,5" >
                    <Grid>
                        <TextBlock Text="Ngày tiếp nhận: " VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBox TextChanged="TextBox_TextChanged" VerticalContentAlignment="Center"  Background="Transparent" BorderThickness="0" Margin="165,0,-4,0" Foreground="{StaticResource sColor1}"/>
                        <Rectangle Height="2" VerticalAlignment="Top" Fill="{StaticResource sColor1}" Margin="0,40,0,0"/>
                    </Grid>
                </Border>
            </Grid>

            
            <Border x:Name="bd_save" MouseDown="bd_save_MouseDown" Grid.Row="2" Cursor="Hand" CornerRadius="10" BorderThickness="2" BorderBrush="{StaticResource sColor1}" Margin="90,25,275,24">

                <TextBlock x:Name="tbx_save" Text="Lưu" TextAlignment="Center"/>
            </Border>
            <Border x:Name="bd_print" MouseDown="bd_print_MouseDown" Grid.Row="2" Cursor="Hand" CornerRadius="10" BorderThickness="2" BorderBrush="{StaticResource sColor1}" Margin="275,25,90,24">
                <TextBlock Text="In" TextAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</Window>
