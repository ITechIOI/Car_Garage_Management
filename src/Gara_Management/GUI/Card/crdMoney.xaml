<Window x:Class="Gara_Management.GUI.Card.crdMoney"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gara_Management.GUI.Card"
                mc:Ignorable="d" ResizeMode="NoResize" AllowsTransparency="True"
        WindowStyle="None" Background="Transparent" WindowStartupLocation="CenterScreen"
         Height="700" Width="800">


    <Border Background="{StaticResource sColor4}" CornerRadius="5" MouseDown="Border_MouseDown">
        <Grid>
            <Border x:Name="bd_exit" Cursor="Hand" 
         MouseDown="bd_exit_MouseDown" Margin="750,0,0,645" CornerRadius="5">
                <Label x:Name="lb_exit" Content="X" Foreground="{StaticResource sColor1}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="30" Margin="0,-3,0,3"  />
            </Border>

        </Grid>

    </Border>
</Window>
